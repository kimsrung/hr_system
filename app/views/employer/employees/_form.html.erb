<%= simple_form_for [:employer, @employee] do |f| %>
  <%= f.input :name, require: true %>
  <%= f.input :email, require: true %>
  <%= f.input :password, require: @employee.new_record? %>
  <%= f.input :password_confirmation, require: @employee.new_record? %>
  <%= f.association :company, disabled: true %>
  <%= f.input  :description %>
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to 'Back', employer_employees_path, class: "btn btn-default" %>
<% end %>