<%= simple_form_for [:admin, @document] do |f| %>
  <%= f.input :name, require: true %>
  <%= f.association :company %>
  <%= f.association :employer %>
  <%= f.association :employee %>
  <%= f.input :assigned_file %>
  <%= f.input :submitted_file %>
  <%= f.input  :description %>
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to 'Back', admin_documents_path, class: "btn btn-default" %>
<% end %>
