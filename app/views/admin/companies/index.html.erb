<div class="page-wrapper">
  <div class="container-fluid">
    <p id="notice"><%= notice %></p>
    <div class="row page-titles">
      <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Companies</h3>
      </div>
      <div class="col-md-6 col-4 align-self-center">
        <%= link_to new_admin_company_path, class: "btn pull-right hidden-sm-down btn-success" do  %>
          <i class="mdi mdi-plus-circle"></i>
          <span>New Company</span>
        <%end%>
      </div>
    </div>
    <div class="card">
      <div class="card-block">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @companies.each do |company| %>
                <tr>
                  <td><%= company.name %></td>
                  <td><%= company.description %></td>
                  <td><%= link_to 'Show', admin_company_path(company) %></td>
                  <td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
                  <td><%= link_to 'Destroy', admin_company_path(company.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
